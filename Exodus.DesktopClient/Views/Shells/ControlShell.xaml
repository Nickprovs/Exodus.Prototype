<Window x:Class="Exodus.DesktopClient.Views.Shells.ControlShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:Exodus.DesktopClient.Views.Shells"
        xmlns:hubControls="clr-namespace:Exodus.DesktopClient.Views.UserControls.Hub"
        xmlns:usercontrols="clr-namespace:Exodus.DesktopClient.Views.UserControls"
        xmlns:commonControls="clr-namespace:Exodus.Common.Controls.Controls;assembly=Exodus.Common.Controls"
        mc:Ignorable="d"
        AllowsTransparency="True"  
        WindowStyle="None"
        Title="ControlShell" 
        Height="500" 
        Width="1000">
    <WindowChrome.WindowChrome>
        <WindowChrome x:Name="ResizeChrome"
                      CaptionHeight="0"
                      ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <commonControls:ExodusWindow WindowTitle="Exodus Prototype" WindowIcon="{StaticResource i0_director_main}">
        <Grid>
            <ContentControl prism:RegionManager.RegionName="ControlShellRegion" />
        </Grid>
    </commonControls:ExodusWindow>
</Window>
